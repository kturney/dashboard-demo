<div style="overflow: hidden">
  <div style="float: left">
    <h3><%= @course.name %></h3>
    <h4>Professor: <%= @course.teacher.name %></h4>
  </div>

  <% if @course.teacher == current_user %>
    <div style='float: right;'>
      <%= link_to 'Edit Course', edit_course_path(@course), class: 'btn btn-medium btn-primary' %>
      <%= link_to 'Create Assignment', new_assignment_path(:course_id => @course.id), class: 'btn btn-medium btn-success' %>
    </div>
  <% end %>
</div>

<% if @assignments.empty? %>
  <h2>No assignments</h2>
<% else %>
  <h2>Assignments</h2>
  <%= render 'assignments/assignments_list' %>
<% end %>